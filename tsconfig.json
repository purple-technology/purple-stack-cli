{
	"compilerOptions": {
		"lib": ["es2020"],
		"types": ["node", "jest"],
		"moduleResolution": "node",
		"module": "es6",
		"sourceRoot": "src",
		"noUnusedLocals": true,
		"declaration": true,
		"noUnusedParameters": true,
		"inlineSourceMap": true,
		"target": "es2019",
		"outDir": "dist",
		"strict": true,
		"noImplicitAny": true,
		"strictFunctionTypes": true,
		"noErrorTruncation": true
	},
	"exclude": ["node_modules"]
}
