{
	"name": "@purple/cli",
	"version": "0.0.0",
	"author": "Purple Technology",
	"description": "CLI for Purple Stack",
	"license": "MIT",
	"main": "index.js",
	"engines": {
		"node": ">=12"
	},
	"scripts": {
		"prepare": "husky install",
		"test": "jest --detectOpenHandles --forceExit",
		"test:watch": "jest --watch",
		"build": "rm -rf dist && tsc",
		"lint": "eslint './src/**/*.ts'",
		"lint:fix": "npm run lint -- --fix",
		"release": "standard-version"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/purple-technology/purple-stack-cli.git"
	},
	"keywords": [
		"serverless",
		"aws",
		"devstack",
		"cli"
	],
	"bugs": {
		"url": "https://github.com/purple-technology/purple-stack-cli/issues"
	},
	"homepage": "https://github.com/purple-technology/purple-stack-cli#readme",
	"files": [
		"dist/*",
		"LICENSE",
		"README.md"
	],
	"lint-staged": {
		"src/**/*.ts": [
			"eslint"
		]
	},
	"devDependencies": {
		"@commitlint/cli": "^16.0.0",
		"@commitlint/config-conventional": "^16.0.0",
		"@types/jest": "^27.4.0",
		"@types/node": "^17.0.19",
		"jest": "^27.5.1",
		"typescript": "^4.5.5",
		"eslint": "8.9.0",
		"eslint-config-prettier": "^8.4.0",
		"@microsoft/eslint-plugin-sdl": "^0.1.9",
		"@typescript-eslint/eslint-plugin": "^5.12.1",
		"@typescript-eslint/parser": "^5.12.1",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-security": "^1.4.0",
		"standard-version": "^9.3.2",
		"prettier": "^2.5.1",
		"lint-staged": "^11.2.6",
		"husky": "^7.0.4",
		"ts-jest": "^27.1.3"
	}
}
